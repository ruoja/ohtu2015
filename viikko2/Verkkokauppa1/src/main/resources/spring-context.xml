<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   
    <bean id="kauppa" class="ohtu.verkkokauppa.Kauppa">
        <constructor-arg ref="omaVarasto"/>
        <constructor-arg ref="omaPankki" />
        <constructor-arg ref="omaViitegeneraattori" />
    </bean>
    
    <bean id="omaKirjanpito" class="ohtu.verkkokauppa.OmaKirjanpito"></bean>
    
    <bean id="omaPankki" class="ohtu.verkkokauppa.OmaPankki">
        <constructor-arg ref="omaKirjanpito" />
    </bean>
    
    <bean id="omaVarasto" class="ohtu.verkkokauppa.OmaVarasto">
        <constructor-arg ref="omaKirjanpito" />
    </bean>
    
    <bean id="omaViitegeneraattori" class="ohtu.verkkokauppa.OmaViitegeneraattori"></bean>
    
</beans>
